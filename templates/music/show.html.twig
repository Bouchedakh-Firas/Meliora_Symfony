{% extends 'baseAdmin.html.twig' %}

{% block title %}Musique{% endblock %}

{% block body %}
    <h1>Musique</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ musique.nombre }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ musique.titre }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ musique.genre }}</td>
            </tr>
            <tr>
                <th>Artiste</th>
                <td>{{ musique.artiste }}</td>
            </tr>
            <tr>
                <th>Musicpath</th>
                <td>{{ musique.musicpath }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ musique.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('music_index') }}">back to list</a>

    <a href="{{ path('music_edit', {'nombre': musique.nombre}) }}">edit</a>

    {{ include('music/_delete_form.html.twig') }}
    <a href="{{ path('pdfMShow',{'nombre': musique.nombre}) }}" class="btn bg-purple btn-flat"><i clas = "fa fa-file-pdf-o"></i>PDF</a>
{% endblock %}
