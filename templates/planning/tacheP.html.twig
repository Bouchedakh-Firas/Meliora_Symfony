{% extends 'base.html.twig' %}


{% block title %}Ajouter tache planning!{% endblock %}
{% block style %}
.grid-container2 {
    
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr 1fr;
  gap: 0px 0px;
  grid-template-areas:
    "topleft topleft topright topright"
    "topleft topleft topright topright"
    "botleft botleft botright botright"
    "botleft botleft botright botright";
}

.topleft { grid-area: topleft; }

.topright { grid-area: topright; }

.botleft { grid-area: botleft; }

.botright { grid-area: botright; }
.demo {
		width:100%;
		height:100%;
		border:#403F3F;
		padding:5px;
	}
	.demo th {
		border:1px solid #000000;
		padding:5px;
		background:#21BA40;
	}
	.demo td {
		border:1px solid #000000;
		padding:5px;
	}

{% endblock %}


{% block javascripts%}

  
{%endblock%}
{% block body %}

<div class="grid-container2">
