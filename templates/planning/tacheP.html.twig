		<td><p>{{ c.genre }}</p></td>
		<td><a  class="btn btn-success text-white"  data-toggle="modal" data-target="#myModal" href="{{ path ('ContentAdd',{'id': id,'idc' : c.id,'type': "citaion" })}}">ajouter</a></td>
	</tr>
        
    {% endfor %}
    
    
    </tbody>
</table>
  </div>
